@page "/counter"
@using Blazor.Flux.Sample.Actions
@using Blazor.Flux.Sample.States
@using SourceGeneration.States
@inherits BluxComponent
@inject IStore<MyState> State

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {

    private int currentCount = 0;

    protected override void OnStateBinding()
    {
        State.Bind(x => x.Count, x => currentCount = x);
    }

    private void IncrementCount()
    {
        DispatchAction<CountAction>();
        // State.Update(x => x.Count++);
    }
}
